<p id="notice"><%= notice %></p>

<h1>Your Organizations</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Contact</th>
    </tr>
  </thead>

  <tbody>
    <% @my_orgs.each do |organization| %>
      <tr class="my-org-row">
        <td><%= organization.name %></td>
        <td><%= organization.description %></td>
        <td><%= organization.contact_email %></td>


        <td><%= link_to 'Show', organization, class: "show-link" %></td>
        <td><%= link_to 'Edit', edit_organization_path(organization) %></td>
        <td><%= link_to 'Destroy', organization, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<h1>Other Organizations</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Contact</th>
    </tr>
  </thead>

  <tbody>
    <% @other_orgs.each do |organization| %>
      <tr class="other-org-row">
        <td><%= organization.name %></td>
        <td><%= organization.description %></td>
        <td><%= organization.contact_email %></td>
        <td><%= link_to 'Show', organization, class: "show-link" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

