<%= simple_form_for(@content_piece) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :text %>
  </div>
  <div class="form-inputs">
    <%= f.input :project_id, collection: @projects %>
  </div>
  <div class="form-actions">
    <%= f.button :submit, "Submit Content" %>
  </div>
<% end %>
